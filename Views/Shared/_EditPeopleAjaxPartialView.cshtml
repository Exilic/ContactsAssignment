@model PeopleViewModel


<form asp-controller="People" asp-action="AjaxEditPost" onsubmit="PostEditedEntry(@Model.EditedPerson.Id, event, this)">

    <label asp-for="EditedPerson.PersonName"></label>
    <input asp-for="EditedPerson.PersonName" value="@Model.EditedPerson.PersonName" />
    <span asp-validation-for="EditedPerson.PersonName"></span>

    <label asp-for="EditedPerson.PhoneNumber"></label>
    <input asp-for="EditedPerson.PhoneNumber" value="@Model.EditedPerson.PhoneNumber" />
    <span asp-validation-for="EditedPerson.PhoneNumber"></span>

    <label asp-for="EditedPerson.City.Id"></label>
    <select asp-for="EditedPerson.City.Id">
        @foreach (var item in Model.CitiesList)
        {
            if (item.CityName == Model.EditedPerson.City.CityName)
            {
                <option value="@item.Id" selected>@item.CityName</option>
            }
            else
            {
                <option value="@item.Id">@item.CityName</option>
            }
        }
    </select>
    <span asp-validation-for="CreatePerson.CityId"></span>

    <label asp-for="EditedPerson.PersonLanguages"></label>
    <select asp-for="EditedPerson.PersonLanguages">
        @foreach (var item in Model.LanguagesList)
        {
            <option value="@item.Id">@item.LanguageName</option>
        }
    </select>
    <span asp-validation-for="EditedPerson.PersonLanguages"></span>


    <input class="btn btn-primary" type="submit" value="Edit post" />
    <input class="btn btn-outline-primary" type="button" value="Cancel" />

</form>
